    "jest": "*",
    "jest-junit-reporter": "^1.1.0",
    "prettier": "^1.12.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.1",
    "x509.js": "^1.0.0"
  },
  "dependencies": {
